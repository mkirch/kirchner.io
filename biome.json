{
  "extends": ["ultracite"],
  "files": {
    "ignore": [
      "packages/design-system/components/ui/**",
      "packages/design-system/lib/**",
      "packages/design-system/hooks/**",
      "apps/docs/**/*.json"
    ]
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe"
        }
      },
      "style": {
        "useBlockStatements": {
          "level": "warn",
          "fix": "safe"
        }
      }
    }
  }
}
